{
    "compilerOptions": {
        "target": "es6",
        "module": "es2015",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "./dist",
        "declaration": true,
        "experimentalDecorators": true
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "node_modules"
    ]
}
